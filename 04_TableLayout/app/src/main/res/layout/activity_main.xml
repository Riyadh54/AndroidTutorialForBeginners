<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2"
    tools:context=".MainActivity"
    >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btn1"
            android:text="JAVA"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_span="3"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:text="C"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/btn2"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Python"
            android:layout_column="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btn3"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:text="C#"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btn4"
            />


    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Kotlin"
            android:layout_column="0"
            android:layout_span="2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:backgroundTint="@color/btn5"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PHP"
            android:layout_column="2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btn2"
            />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="HTML"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:backgroundTint="@color/btn7"
          />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CSS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:textColor="@color/black"
            android:layout_span="2"
            android:backgroundTint="@color/btn4"
            />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="JAVA SCRIPT"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_span="3"
            android:backgroundTint="@color/btn9"
            />
    </TableRow>




</TableLayout>