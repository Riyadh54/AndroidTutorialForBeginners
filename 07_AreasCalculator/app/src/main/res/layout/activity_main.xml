<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="@dimen/main_ll_padding"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_tv_choose_shape"
            android:textSize="@dimen/main_tv_choose_the_shape_textSize"
            android:textColor="@color/black"
            />
        <Spinner
            android:id="@+id/main_sp_shapes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/shapes"
            android:layout_marginStart="@dimen/main_spinner_shapes_marginStart"
            android:theme="@style/Spinner"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/main_et_number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"

        />
    <EditText
        android:id="@+id/main_et_number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        />
    <Button
        android:id="@+id/main_btn_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="@string/main_btn_calculate"
        android:textColor="@color/black"
        android:textSize="@dimen/main_btn_calculate_textSize"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/main_tv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/main_tv_result_textSize"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/teal_200"
        />


</LinearLayout>